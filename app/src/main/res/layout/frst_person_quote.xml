<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout android:id="@+id/qtDateRel"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/qtDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text="   Yesterday   "
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quoteRel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/quote_bg"
            android:layout_below="@+id/qtDateRel">

            <TextView
                android:id="@+id/quoteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="Hello Its me from Universe! Hi Hello How are You"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="20sp"
                android:rotation="-10"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textColor="#040347"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/qtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/quoteRel"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="10:30 AM"
            android:textSize="8sp"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</RelativeLayout>